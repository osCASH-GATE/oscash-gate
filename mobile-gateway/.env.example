# osCASH.me Mobile Gateway Environment Configuration
# Copy this file to .env and configure your settings

# Server Configuration
PORT=3000
NODE_ENV=development

# BTCPay Server Configuration (osCASH.org Ecosystem)
BTCPAY_URL=https://demo-pay.osCASH.org
BTCPAY_API_KEY=your-btcpay-api-key-here
BTCPAY_STORE_ID=demo-store-id

# Mobile JWT Configuration
MOBILE_JWT_SECRET=your-jwt-secret-here-generate-with-openssl-rand-hex-32
MOBILE_JWT_EXPIRES_IN=24h

# Security Configuration
ALLOWED_ORIGINS=https://gate.osCASH.org,https://pay.osCASH.org,https://osCASH.me,http://localhost:3000
RATE_LIMIT_MAX_REQUESTS=100

# WebSocket Configuration
WEBSOCKET_HEARTBEAT_INTERVAL=30000
WEBSOCKET_MAX_CONNECTIONS=1000

# Payment Configuration
DEFAULT_CURRENCY=BTC
SUPPORTED_CURRENCIES=BTC,SATS,USD,EUR
DEFAULT_INVOICE_EXPIRY=3600
MIN_INVOICE_AMOUNT_SATS=1000
MAX_INVOICE_AMOUNT_SATS=100000000

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=mobile-gateway.log

# Cache Configuration
CACHE_TTL=300

# osCASH.me Branding
OSCASH_BRAND_NAME=osCASH.me
OSCASH_SUPPORT_URL=https://osCASH.me/support

# Development Flags
ENABLE_API_DOCS=true
ENABLE_CORS_DEBUG=false
ENABLE_REQUEST_LOGGING=true

# Docker Compose Configuration
POSTGRES_PASSWORD=your-secure-postgres-password-here
ACME_EMAIL=admin@osCASH.me

# Production Security (generate strong secrets)
# openssl rand -hex 32
# pwgen -s 64 1