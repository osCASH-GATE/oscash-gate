# osCASH.me GATE Environment Configuration
# Copy this file to .env and adjust values for your setup

# === Basic Configuration ===
# Domain where your GATE is hosted
OSCASH_GATE_HOST=gate.osCASH.me
OSCASH_GATE_PORT=23000

# === Network Settings ===
# mainnet, testnet, regtest
BTCPAY_NETWORK=mainnet
# Supported chains: btc,ltc (comma separated)
BTCPAY_CHAINS=btc

# === Database Configuration ===
POSTGRES_PASSWORD=osCASHgate2025!
POSTGRES_USER=postgres
POSTGRES_DB=btcpayserver

# === Security Settings ===
# Generate with: openssl rand -hex 32
BTCPAY_SIGNINGSEED=your-signing-seed-here
BTCPAY_COOKIESECRET=your-cookie-secret-here

# === osCASH.me Branding ===
BTCPAY_BRAND_TITLE="osCASH.me GATE"
BTCPAY_BRAND_DESCRIPTION="Privacy-First Payment Gateway"
BTCPAY_THEME=oscash

# === SSL/TLS Configuration ===
# Set to true if running behind reverse proxy with SSL
BTCPAY_SSL_ENABLED=false
BTCPAY_LETSENCRYPT_EMAIL=admin@example.com

# === Lightning Network (Optional) ===
# Enable Lightning Network support
BTCPAY_ENABLE_LIGHTNING=false
# LND, CLN, or ECLAIR  
BTCPAY_LIGHTNING_IMPLEMENTATION=LND

# === Tor Configuration (Optional) ===
# Enable Tor hidden service
BTCPAY_TOR_ENABLED=false
TOR_RELAY_NICKNAME=oscashgate
TOR_RELAY_CONTACT=admin@example.com

# === Plugin Configuration ===
# Comma-separated list of plugin URLs to install
BTCPAY_PLUGINS=""

# === Development Settings ===
# Set to Development for debugging
ASPNETCORE_ENVIRONMENT=Production
BTCPAY_LOGS=logs

# === External Services ===
# Bitcoin Core RPC (if not using docker bitcoin)
BTCPAY_BTCRPCURL=http://bitcoind:8332
BTCPAY_BTCRPCUSER=bitcoin
BTCPAY_BTCRPCPASSWORD=bitcoin

# === Backup Settings ===
# S3-compatible storage for backups
BTCPAY_S3_BACKUP_ENDPOINT=
BTCPAY_S3_BACKUP_BUCKET=
BTCPAY_S3_BACKUP_ACCESS=
BTCPAY_S3_BACKUP_SECRET=